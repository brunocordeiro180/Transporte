<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Cnpj</th>
      <th>Nome</th>
      <th>Tel contato</th>
      <th>Qtd empregados</th>
      <th>Endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.cnpj %></td>
        <td><%= empresa.nome %></td>
        <td><%= empresa.tel_contato %></td>
        <td><%= empresa.qtd_empregados %></td>
        <td><%= empresa.endereco %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

